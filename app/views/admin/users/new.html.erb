  <h2>New account</h2>

  
  <% form_for(@user, :url=>admin_users_path, :method => :post) do |f| %>
    <%=error_messages_for :user %>  
    <p>
      <%= f.label :login %>  <br />
      <%= f.text_field :login %>
    </p>
    
    <%= render :partial => "form", :locals => {:f => f} %>
    <%=submit_tag "Create and activate this account", :class => "submit" %>
  <% end %>
