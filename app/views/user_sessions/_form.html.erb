<% form_for @user_session, :url=>user_session_path do |f| %>
  <%= f.error_messages %>
  
  <div id="row">
    <%= f.label :login %><br />
    <%= f.text_field :login %>
  </div>
  <div id="row">
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </div>
  <div id="row">
    <%= f.check_box :remember_me %>
    <%= f.label :remember_me %>
    <%= f.submit "Log In", :class => "submit" %>
    
  <p>
    Forgot your password?
    <%= link_to "Recover your password", new_password_reset_path %>
  </p>
<% end %>